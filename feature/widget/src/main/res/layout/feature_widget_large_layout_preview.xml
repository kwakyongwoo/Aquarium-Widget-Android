        android:layout_margin="48dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/core_ui_fish_43"
        android:layout_marginTop="120dp"
        android:layout_marginStart="200dp"/>

